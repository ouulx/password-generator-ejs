<!DOCTYPE html>
<html>
<head>
    <title>Password History</title>
    <style>
        .container { max-width: 800px; margin: 50px auto; font-family: Arial; }
        .password-item { background: #f8f9fa; padding: 20px; margin: 10px 0; border-radius: 8px; border-left: 4px solid #007bff; }
        .password { font-family: monospace; font-size: 18px; background: #e9ecef; padding: 10px; border-radius: 4px; word-break: break-all; }
        .meta { color: #6c757d; font-size: 14px; margin-top: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>üîê Password History</h1>
        <p><a href="/password">‚Üê Generate New Password</a></p>
        
        <% if (!passwords || passwords.length === 0) { %>
            <p>No passwords generated yet. <a href="/password">Generate your first password!</a></p>
        <% } else { %>
            <% passwords.forEach(function(item) { %>
                <div class="password-item">
                    <div class="password"><%= item.password || 'N/A' %></div>
                    <div class="meta">
                        Length: <%= item.length || 'N/A' %> | 
                        Symbols: <%= item.includeSymbols ? 'Yes' : 'No' %> | 
                        Numbers: <%= item.includeNumbers ? 'Yes' : 'No' %> | 
                        Generated: <%= item.timestamp ? new Date(item.timestamp).toLocaleString() : 'Unknown' %>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>